{
  "manifest_version": 2,

  "name": "Transcript Downloader",
  "description": "Download transcripts from microsoft stream",
  "version": "0.8",

  "permissions": [
    "downloads", "activeTab","tabs", "<all_urls>", "webRequest", "storage"
  ],

  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html",
    "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png" 
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}